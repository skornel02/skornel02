---
interface Props {
	title: string;
	body: string;
	href: string;
}

const {href, title, body} = Astro.props;
---

<div class="card">
	<div class="card-title">
		<h2></h2>
	</div>
	<div class="card-body"></div>
</div>
<div class="card w-96 bg-base-100 shadow-xl">
	<div class="card-body">
		<h2 class="card-title">
			{title}
			<span>&rarr;</span>
		</h2>
		<a href={href}>
			<p>
				{body}
			</p>
		</a>
	</div>
</div>
