<style>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer components {
		.resume-section {
			@apply py-20 p-4 md:py-12 lg:p-12;
			@apply sm:min-h-screen;
			@apply print:py-4 print:border-b-0 print:first:pt-0 print:first:mt-0;
			@apply flex flex-col;
		}

		.resume-section h1 {
			@apply text-5xl leading-[3rem] md:text-pageTitle md:leading-pageTitle;
		}

		.resume-section h2 {
			@apply text-3xl md:text-pageSection;
			@apply print:text-center;
		}

		.resume-item {
			@apply flex flex-col md:flex-row;
			@apply mb-5;
			@apply print:break-inside-avoid;
			page-break-inside: avoid;
		}

		.icon {
			@apply inline-block w-[32px] h-[32px];
		}

		.popup-modal {
			@apply z-40;
			@apply fixed top-0 bottom-0 right-0 left-0;
			@apply flex justify-center items-center;
			@apply pointer-events-none;
		}
	}

	@layer utilities {
		.subheading {
			font-family: 'Saira Extra Condensed', serif;
			@apply uppercase font-medium text-lg;
		}
		.resume-date {
			@apply min-w-max md:min-w-[12rem];
		}
	}

	@media print {
		#name {
			text-align: center;
		}
		#name div {
			display: inline;
		}

		#awards.resume-section {
			page-break-inside: unset;
		}
	}
</style>
