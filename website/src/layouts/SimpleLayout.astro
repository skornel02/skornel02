---
import HeadContent from '../components/common/HeadContent.astro';
import {ViewTransitions} from 'astro:transitions';
import 'terminal.css';

interface Props {
	title: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<HeadContent />

		<title>{title}</title>

		<meta property="og:url" content={`https://skornel02.hu${Astro.url.pathname}`} />
		<slot name="head" />

		<ViewTransitions />
	</head>
	<body>
		<slot />
	</body>
</html>
